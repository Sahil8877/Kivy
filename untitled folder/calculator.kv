MainBoxLayout

<MainBoxLayout>
    orientation: "vertical"
    
    TextInput:
        id: text_input
        size_hint_y: .5
        hint_text: "0"
        font_size: "50dp"
        multiline: False
        background_color: .9,.5,0,1
        halign: "right"
        font_name: "fonts/Astrolab.ttf"
    AnchorLayout:
        orientation: "horizontal"
        anchor_x: "center"
        anchor_y: "top"
        size_hint_y: .1
        BoxLayout:
            orientation: "horizontal"
            #size_hint_y: .4
            Button:
                on_press: root.clear_btn(self)
                text: "CE"
                size_hint: .5, 1
                font_size: "25dp"
                background_color: .2,.6,1,1
                #font_name: "fonts/Astrolab.ttf"
            Button:
                id: "del"
                text: "<"
                size_hint: .5, 1
                font_size: "40dp"
                background_color: .2,.6,1,1
                #font_name: "fonts/Astrolab.ttf"
    StackLayout:
        orientation: "lr-bt"
        spacing: 1
        padding: 5
        
        Button:
            id: 0
            text: "0"
            size_hint: .25, .25
            font_size: "30dp"
            background_color: 1,.7,.5,1
            font_name: "fonts/Astrolab.ttf"
        Button:
            id : "."
            text: "."
            size_hint: .25, .25
            #height: "70dp"
            font_size: "30dp"
            background_color: 1,.7,.5,1
            font_name: "fonts/Astrolab.ttf"
        Button:
            id: "/"
            text: "/"
            size_hint: .25, .25
            #height: "70dp"
            background_color: 1,.7,.5,1
            font_size: "30dp"
            font_name: "fonts/Astrolab.ttf"
        Button:
            id: "="
            text: "="
            size_hint: .25, .25
            #height: "70dp"
            font_size: "30dp"
            font_name: "fonts/Astrolab.ttf"
            background_color: 0,1,0,1
        Button:
            text: "1"
