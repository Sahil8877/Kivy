<MyGrid>:
    fname : name
    lname : lname
    email : emails
    GridLayout:
        
        cols:1
        size: root.width,root.height
        GridLayout:
            cols:2
            Label:
                text : "First Name :"
            TextInput:
                id: name
                multiline: False
            Label:
                text: "Last Name :"
            TextInput:
                id: lname
                multiline: False
            Label:
                text: "Email :"
            TextInput:
                id: emails
                multiline: False
        Button:
            text: "SUBMIT"
            on_press: root.clicked()
            font_size : 30
