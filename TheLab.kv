<WidgetExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle(self)
        size_hint: None, 1 
        width: "100dp"
        
    Button:
        text: "Click here"
        on_press: root.clicked()
        disabled: not root.toggle_status
        
    Label:
        text: root.my_text
        font_name: "fonts/Astrolab.ttf"
        font_size: 30
        color: 1,.5,1,1
    Switch:
        id: switch_status
        size_hint: None, 1 
        width: "100dp" 
        active: True
        on_active: root.switch_status(self)
    Slider:
        id: slider
        min: 0
        max: 100
        orientation: "vertical"
        on_value: root.slider_status(self)
        #value: 50
        disabled: not switch_status.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(slider.value))
            font_size: 60
        ProgressBar:
            value: int(slider.value)
    TextInput:
        id: text_input
        multiline: False
        size_hint: None, 1
        width: "100dp"
        on_text_validate:  root.on_text_validate(self)
    Label:
        text: root.textbox_value

