MainBoxLayout

<MainBoxLayout>
    orientation: "vertical"
    
    TextInput:
        id: text_input
        size_hint_y: .5
        #text: root.text_display
        hint_text: "0"
        font_size: "50dp"
        foreground_color: 1,1,1,1
        multiline: False
        background_color: 0,0,0,1
        halign: "right"
        font_name: "fonts/Astrolab.ttf"

    AnchorLayout:
        orientation: "horizontal"
        anchor_x: "center"
        anchor_y: "top"
        size_hint_y: .1
        BoxLayout:
            orientation: "horizontal"
            #size_hint_y: .4
            Button:
                on_press: root.clear_btn(text_input)
                text: "CE"
                size_hint: .5, 1
                font_size: "25dp"
                background_color: 0,0,0,1
                #font_name: "fonts/Astrolab.ttf"
            
            Button:
                id: "del"
                on_press: root.delete_btn(text_input)
                text: "<"
                size_hint: .5, 1
                font_size: "40dp"
                background_color: 0,0,0,1
                #font_name: "fonts/Astrolab.ttf"
            Button:
                text: "%"
                size_hint: .5, 1
                #height: "20dp"
                font_name: "fonts/Astrolab.ttf"
                background_color: 0,0,0,1
                font_size: "20dp"
                on_press: root.operator_btn(text_input,"%")
            
        

    StackLayout:
        orientation: "lr-bt"
        spacing: 1
        padding: 5
        
        Button:
            id: 0
            text: "0"
            size_hint: .25, .25
            font_size: "30dp"
            background_color: 1,.7,.5,1
            font_name: "fonts/Astrolab.ttf"
            on_press: root.number_btn(text_input,number="0")
        Button:
            
            text: "."
            size_hint: .25, .25
            #height: "70dp"
            font_size: "30dp"
            background_color: 1,.7,.5,1
            font_name: "fonts/Astrolab.ttf"
            on_press: root.operator_btn(text_input,".")
        Button:
            
            text: "/"
            size_hint: .25, .25
            #height: "70dp"
            background_color: 1,.7,.5,1
            font_size: "30dp"
            font_name: "fonts/Astrolab.ttf"
            on_press: root.operator_btn(text_input,"/")
        Button:
            
            text: "="
            size_hint: .25, .25
            #height: "70dp"
            font_size: "30dp"
            font_name: "fonts/Astrolab.ttf"
            background_color: 0,1,0,1
            on_press: root.result_btn(text_input)
        Button:
